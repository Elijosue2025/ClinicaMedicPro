<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaMedicPro.GestionUsers.UsuariosPage"
             Title="Gestión de Usuarios"
             BackgroundColor="#F8FAFC">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="20">

            <!-- Título + Nuevo Usuario -->
            <Grid>
                <Label Text="Gestión de Usuarios" 
                       FontSize="28" FontAttributes="Bold" TextColor="#1E293B"/>
                <Button Text="+ Nuevo Usuario"
                        BackgroundColor="#3B82F6" TextColor="White"
                        FontAttributes="Bold" CornerRadius="20"
                        HorizontalOptions="End"
                        Clicked="OnNuevoUsuarioClicked"/>
            </Grid>
            <!-- BOTÓN VOLVER AL DASHBOARD (arriba a la izquierda) -->
            <!-- BOTÓN VOLVER (solo flecha, arriba a la izquierda) -->
            <Grid HeightRequest="70" 
      BackgroundColor="Transparent"
      Padding="10"
      VerticalOptions="Start"
      HorizontalOptions="Start">

                <Button Text="Back"
            FontFamily="SegoeUI"
            FontSize="32"
            TextColor="White"
            BackgroundColor="#3B82F6"
            CornerRadius="30"
            WidthRequest="60"
            HeightRequest="60"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Clicked="OnVolverDashboardClicked" />
            </Grid>

            <!-- Lista de usuarios -->
            <Border BackgroundColor="#EFF6FF" Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25"/>
                </Border.StrokeShape>

                <CollectionView x:Name="listaUsuarios">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Spacing="15" HorizontalOptions="Center" Padding="60">
                            <Label Text="No hay usuarios registrados" 
                                   FontSize="24" FontAttributes="Bold" TextColor="#94A3B8"/>
                            <Label Text="Agrega el primer usuario" 
                                   FontSize="16" TextColor="#CBD5E1"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#DBEAFE" Padding="22" Margin="0,10">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>

                                <Grid ColumnDefinitions="80,*,Auto">
                                    <!-- Avatar -->
                                    <Border BackgroundColor="#3B82F6" StrokeShape="Ellipse" 
                                            WidthRequest="70" HeightRequest="70">
                                        <Label Text="{Binding Iniciales}" 
                                               FontSize="28" FontAttributes="Bold"
                                               TextColor="White" 
                                               HorizontalOptions="Center" VerticalOptions="Center"/>
                                    </Border>

                                    <!-- Datos -->
                                    <VerticalStackLayout Grid.Column="1" Margin="20,0" Spacing="8">
                                        <Label Text="{Binding nombre}" 
                                               FontAttributes="Bold" FontSize="22" TextColor="#1E293B"/>
                                        <Label Text="{Binding us_correo}" FontSize="18" TextColor="#1E40AF"/>
                                        <HorizontalStackLayout Spacing="20">
                                            <Label Text="{Binding rol, StringFormat='Rol: {0}'}" 
                                                   FontAttributes="Bold" FontSize="16" TextColor="#1D4ED8"/>
                                            <Label Text="{Binding especialidad}" 
                                                   FontSize="16" TextColor="#7C3AED"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <!-- Botones CRUD -->
                                    <HorizontalStackLayout Grid.Column="2" Spacing="10" VerticalOptions="Center">
                                        <Button Text="Editar" 
                                                BackgroundColor="#6366F1" TextColor="White"
                                                CornerRadius="15" Padding="18,10"
                                                Clicked="OnEditarClicked"
                                                CommandParameter="{Binding id}"/>
                                        <Button Text="Eliminar" 
                                                BackgroundColor="#EF4444" TextColor="White"
                                                CornerRadius="15" Padding="18,10"
                                                Clicked="OnEliminarClicked"
                                                CommandParameter="{Binding id}"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>