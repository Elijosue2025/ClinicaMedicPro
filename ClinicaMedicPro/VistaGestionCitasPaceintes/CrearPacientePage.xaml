<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaMedicPro.VistaGestionCitasPaceintes.CrearPacientePage"
             Title="Crear Paciente">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="Crear Perfil de Paciente"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Frame BackgroundColor="#F8FAFC" Padding="20" CornerRadius="16">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Usuario seleccionado:" FontAttributes="Bold"/>
                    <Label x:Name="lblNombre" FontSize="18" TextColor="#0EA5E9"/>
                    <Label x:Name="lblCorreo" FontSize="14" TextColor="#64748B"/>
                    <Entry Placeholder="Cédula (ej: 0102030405)"
                           x:Name="txtCedula"
                           BackgroundColor="White"/>
                    <Entry Placeholder="Teléfono (ej: 0987654321)"
                           x:Name="txtTelefono"
                           BackgroundColor="White"/>
                    <Entry Placeholder="Dirección (ej: Calle A)"
                           x:Name="txtDireccion"
                           BackgroundColor="White"/>
                    <Button Text="Crear Paciente"
                            BackgroundColor="#10B981"
                            TextColor="White"
                            CornerRadius="12"
                            Clicked="OnCrearPacienteClicked"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>