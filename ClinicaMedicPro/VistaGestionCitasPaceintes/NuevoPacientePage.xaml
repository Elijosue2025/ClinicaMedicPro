<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaMedicPro.VistaGestionCitasPaceintes.NuevoPacientePage"
             Title="Seleccionar Usuario para Paciente">

    <ContentPage.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="FA" x:TypeArguments="x:String">
                <On Platform="Android" Value="fa-solid-900.ttf#Font Awesome 6 Free" />
                <On Platform="iOS" Value="Font Awesome 6 Free-Solid-900" />
                <On Platform="WinUI" Value="Assets/Fonts/fa-solid-900.ttf#Font Awesome 6 Free" />
            </OnPlatform>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="#F8FAFC">
        <Label Text="Seleccionar Usuario para Convertir en Paciente"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#1E293B"/>

        <SearchBar Placeholder="Buscar por nombre o correo..."
                   TextChanged="OnFiltroChanged"
                   BackgroundColor="White"
                   HeightRequest="50"/>

        <CollectionView ItemsSource="{Binding UsuariosFiltrados}"
                        SelectionMode="Single"
                        SelectionChanged="OnUsuarioSeleccionado">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" BackgroundColor="White" Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Border BackgroundColor="#3B82F6" StrokeShape="Ellipse" WidthRequest="50" HeightRequest="50">
                            <Label Text="{Binding Iniciales}"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Info -->
                        <VerticalStackLayout Grid.Column="1" Margin="15,0" VerticalOptions="Center">
                            <Label Text="{Binding us_nombre}" FontAttributes="Bold" FontSize="17"/>
                            <Label Text="{Binding us_correo}" FontSize="14" TextColor="#64748B"/>
                            <Label Text="{Binding us_tipo, StringFormat='Rol actual: {0}'}"
                                   FontSize="12" TextColor="#94A3B8"/>
                        </VerticalStackLayout>

                        <!-- Flecha -->
                        <Label Grid.Column="2"
                               Text="&#xf054;"
                               FontFamily="{StaticResource FA}"
                               FontSize="26"
                               TextColor="#94A3B8"
                               VerticalOptions="Center"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>