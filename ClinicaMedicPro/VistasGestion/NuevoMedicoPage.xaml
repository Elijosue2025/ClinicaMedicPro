<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaMedicPro.VistasGestion.NuevoMedicoPage"
             Title="Seleccionar Usuario">

    <ContentPage.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="FA" x:TypeArguments="x:String">
                <On Platform="Android" Value="fa-solid-900.ttf#Font Awesome 6 Free" />
                <On Platform="iOS" Value="Font Awesome 6 Free-Solid-900" />
                <On Platform="WinUI" Value="Assets/Fonts/fa-solid-900.ttf#Font Awesome 6 Free" />
            </OnPlatform>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="#F8FAFC">

        <Label Text="Convertir usuario en MÃ©dico"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#1E293B"/>

        <SearchBar x:Name="searchBar"
                   Placeholder="Buscar por nombre o correo..."
                   TextChanged="OnFiltroChanged"
                   BackgroundColor="White"
                   HeightRequest="50"/>

        <CollectionView ItemsSource="{Binding UsuariosFiltrados}"
                        SelectionMode="Single"
                        SelectionChanged="OnUsuarioSeleccionado">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="18" BackgroundColor="White" Margin="0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Border BackgroundColor="#3B82F6" 
                                WidthRequest="56" HeightRequest="56"
                                StrokeShape="Ellipse"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                            <Label Text="{Binding Iniciales}"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   FontSize="20"/>
                        </Border>

                        <!-- Info -->
                        <VerticalStackLayout Grid.Column="1" Margin="15,0" VerticalOptions="Center">
                            <Label Text="{Binding us_nombre}" 
                                   FontAttributes="Bold" 
                                   FontSize="18"/>
                            <Label Text="{Binding us_correo}" 
                                   FontSize="15" 
                                   TextColor="#64748B"/>
                            <Label Text="{Binding us_tipo, StringFormat='Rol: {0}'}"
                                   FontSize="13"
                                   TextColor="#94A3B8"/>
                        </VerticalStackLayout>

                        <!-- Flecha derecha -->
                        <Label Grid.Column="2"
                               Text="&#xf054;"
                               FontFamily="{StaticResource FA}"
                               FontSize="28"
                               TextColor="#94A3B8"
                               VerticalOptions="Center"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Indicador de carga -->
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           Color="#3B82F6"
                           IsVisible="{Binding IsBusy}"
                           VerticalOptions="CenterAndExpand"/>
    </VerticalStackLayout>
</ContentPage>