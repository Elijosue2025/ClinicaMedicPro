<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaMedicPro.VistasGestion.NuevoMedicoPage"
             Background="#F8FAFC"
             Title="Nuevo Médico">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <!-- Header -->
            <Border BackgroundColor="White" Stroke="#E2E8F0" StrokeThickness="1" Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="20" Offset="0,8"/>
                </Border.Shadow>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Doctor" FontFamily="{StaticResource FA}" FontSize="50" TextColor="#0EA5E9"/>
                    <VerticalStackLayout Grid.Column="1" Margin="15,0" VerticalOptions="Center">
                        <Label Text="Agregar Nuevo Médico" FontSize="24" FontAttributes="Bold" TextColor="#1E293B"/>
                        <Label Text="Complete todos los datos" FontSize="14" TextColor="#64748B"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Formulario -->
            <Border BackgroundColor="White" Stroke="#E2E8F0" StrokeThickness="1" Padding="25">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.05" Radius="15" Offset="0,5"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">

                    <!-- Nombre completo -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Nombre completo" FontSize="14" TextColor="#475569"/>
                        <Entry x:Name="txtNombre" Placeholder="Dr. Juan Pérez" FontSize="16"/>
                    </VerticalStackLayout>

                    <!-- Correo -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Correo electrónico" FontSize="14" TextColor="#475569"/>
                        <Entry x:Name="txtCorreo" Placeholder="doctor@clinica.com" Keyboard="Email" FontSize="16"/>
                    </VerticalStackLayout>

                    <!-- Contraseña temporal -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Contraseña temporal" FontSize="14" TextColor="#475569"/>
                        <Entry x:Name="txtPassword" Placeholder="123456" IsPassword="True" FontSize="16"/>
                    </VerticalStackLayout>

                    <!-- Especialidad -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Especialidad" FontSize="14" TextColor="#475569"/>
                        <Picker x:Name="pickerEspecialidad" Title="Seleccione especialidad" FontSize="16">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Cardiología</x:String>
                                    <x:String>Pediatría</x:String>
                                    <x:String>Dermatología</x:String>
                                    <x:String>Medicina General</x:String>
                                    <x:String>Odontología</x:String>
                                    <x:String>Neurología</x:String>
                                    <x:String>Oftalmología</x:String>
                                    <x:String>Traumatología</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Botones -->
                    <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" Margin="0,20">
                        <Button Text="Cancelar"
                                BackgroundColor="#94A3B8"
                                TextColor="White"
                                CornerRadius="16"
                                WidthRequest="140"
                                Clicked="OnCancelarClicked"/>

                        <Button Text="Guardar Médico"
                                BackgroundColor="#10B981"
                                TextColor="White"
                                CornerRadius="16"
                                FontAttributes="Bold"
                                WidthRequest="200"
                                Clicked="OnGuardarClicked"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>