<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaMedicPro.VistasGestion.CrearMedicoPage"
             Title="Crear Médico">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="Crear Perfil de Médico" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>

            <Frame BackgroundColor="#F8FAFC" Padding="20" CornerRadius="16">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Usuario seleccionado:" FontAttributes="Bold"/>

                    <!-- Aquí mostramos nombre y correo -->
                    <Label x:Name="lblNombre" 
                           FontSize="18" 
                           TextColor="#0EA5E9"/>
                    <Label x:Name="lblCorreo" 
                           FontSize="14" 
                           TextColor="#64748B"/>

                    <Entry Placeholder="Especialidad (ej: Cardiología, Pediatría...)"
                           x:Name="txtEspecialidad"
                           BackgroundColor="White"/>

                    <Button Text="Crear Médico"
                            BackgroundColor="#10B981"
                            TextColor="White"
                            CornerRadius="12"
                            Clicked="OnCrearMedicoClicked"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>