<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClinicaMedicPro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vistas="clr-namespace:ClinicaMedicPro.Vistas"
    xmlns:vistasGestion="clr-namespace:ClinicaMedicPro.VistasGestion"
    Title="ClinicaMedicPro">

    <!-- Páginas principales -->
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate vistas:LoginPage}" />
    <ShellContent Route="AdminPage" ContentTemplate="{DataTemplate vistas:AdminPage}" />
    <ShellContent Route="MedicoPage" ContentTemplate="{DataTemplate vistas:MedicoPage}" />
    <ShellContent Route="PacientePage" ContentTemplate="{DataTemplate vistas:PacientePage}" />

    <!-- NUEVA: Gestión de médicos -->
    <ShellContent 
        Route="GestionMedicosPage" 
        ContentTemplate="{DataTemplate vistasGestion:GestionMedicosPage}" />

    <!-- Otras páginas de gestión (opcional futuro) -->
    <ShellContent Route="NuevoMedicoPage" ContentTemplate="{DataTemplate vistasGestion:NuevoMedicoPage}" />
    <ShellContent Route="EditarMedicoPage" ContentTemplate="{DataTemplate vistasGestion:EditarMedicoPage}" />

</Shell>

