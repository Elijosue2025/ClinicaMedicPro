                   FontSize="14" 
                   TextColor="#7F8C8D" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <!-- Email -->
            <Frame BackgroundColor="White" CornerRadius="15" Padding="0" BorderColor="#E0E0E0">
                <Entry x:Name="EntryCorreo"
                       Placeholder="Correo electr贸nico"
                       Keyboard="Email"
                       TextColor="#2C3E50"
                       Margin="15,0"/>
