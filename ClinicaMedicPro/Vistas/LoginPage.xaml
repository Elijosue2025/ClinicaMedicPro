            <Button x:Name="BtnHuella"
                    Text=" Autenticar con Huella"
                    Clicked="OnHuellaClicked"
                    BackgroundColor="#27AE60"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="15"
                    HeightRequest="50"
                    IsVisible="False"/>

            <!-- Separador -->
            <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,10"/>

            <!-- Bot贸n Google -->
            <Button x:Name="BtnGoogle"
                    Text="Continuar con Google"
