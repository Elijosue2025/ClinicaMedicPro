<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaMedicPro.Vistas.DetallePacientePage"
             Title="Detalle del Paciente"
             BackgroundColor="#F8FAFC">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Header Paciente -->
            <Border BackgroundColor="White" Stroke="#E2E8F0" StrokeThickness="1" Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="15" Offset="0,8"/>
                </Border.Shadow>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar con iniciales -->
                    <Border BackgroundColor="#3B82F6" WidthRequest="80" HeightRequest="80">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="40"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding Iniciales}" FontSize="32" FontAttributes="Bold"
                               TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Border>

                    <VerticalStackLayout Grid.Column="1" Margin="20,0" Spacing="6">
                        <Label Text="{Binding NombreCompleto}" FontSize="24" FontAttributes="Bold"/>
                        <Label Text="{Binding Correo}" FontSize="16" TextColor="#64748B"/>
                        <Label Text="{Binding Cedula}" FontSize="15" TextColor="#94A3B8"/>
                        <Label Text="{Binding Telefono}" FontSize="15" TextColor="#94A3B8"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Historial Clínico -->
            <Border BackgroundColor="White" Stroke="#E2E8F0" Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="12">
                    <Label Text="Historial Clínico" FontSize="20" FontAttributes="Bold"/>
                    <CollectionView ItemsSource="{Binding Historial}">
                        <CollectionView.EmptyView>
                            <Label Text="Sin historial clínico" TextColor="Gray" HorizontalOptions="Center"/>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="#FEF3C7" Padding="15" Margin="0,5">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding hi_diagnostico}" FontAttributes="Bold" TextColor="#92400E"/>
                                        <Label Text="{Binding hi_tratamiento}" TextColor="#78350F"/>
                                        <Label Text="{Binding hi_notas}" FontSize="13"/>
                                        <Label Text="{Binding hi_fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}" 
                                               FontSize="12" HorizontalOptions="End"/>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Citas -->
            <Border BackgroundColor="White" Stroke="#E2E8F0" Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="12">
                    <Label Text="Citas con este paciente" FontSize="20" FontAttributes="Bold"/>
                    <CollectionView ItemsSource="{Binding Citas}">
                        <CollectionView.EmptyView>
                            <Label Text="Sin citas registradas" TextColor="Gray" HorizontalOptions="Center"/>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="#10B981" Padding="15" Margin="0,5">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <VerticalStackLayout>
                                            <Label Text="{Binding ci_fecha, StringFormat='{0:dd/MM/yyyy}'}" 
                                                   FontAttributes="Bold" TextColor="White"/>
                                            <Label Text="{Binding ci_hora}" TextColor="#BBF7D0"/>
                                            <Label Text="{Binding ci_motivo}" TextColor="#F0FDF4"/>
                                        </VerticalStackLayout>
                                        <Label Grid.Column="1" Text="{Binding ci_estado}" 
                                               BackgroundColor="#059669" TextColor="White" Padding="10,5"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>