<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicaMedicPro.Vistas.AdminPage"
             BackgroundColor="#F8FAFC"
             Title="Panel Administrador">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25">

            <!-- Header Admin -->
            <Border BackgroundColor="White" Stroke="#E2E8F0" StrokeThickness="1" Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.08" Radius="20" Offset="0,8"/>
                </Border.Shadow>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="A" FontSize="56" FontAttributes="Bold" TextColor="#DC2626"/>

                    <VerticalStackLayout Grid.Column="1" Margin="20,0" VerticalOptions="Center">
                        <Label Text="Bienvenido, Administrador" FontSize="16" TextColor="#64748B"/>
                        <Label Text="Carlos Mora" FontSize="28" FontAttributes="Bold" TextColor="#1E293B"/>
                        <Label Text="Panel de Control Total" FontSize="18" FontAttributes="Bold" TextColor="#DC2626"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Estadísticas -->
            <HorizontalStackLayout Spacing="16">
                <Border BackgroundColor="#FEE2E2" StrokeShape="RoundRectangle 18" Padding="20">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="48" FontSize="40" FontAttributes="Bold" TextColor="#991B1B"/>
                        <Label Text="Pacientes" FontSize="14" TextColor="#7F1D1D"/>
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="#DBEAFE" StrokeShape="RoundRectangle 18" Padding="20">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="12" FontSize="40" FontAttributes="Bold" TextColor="#1D4ED8"/>
                        <Label Text="Médicos" FontSize="14" TextColor="#1E40AF"/>
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="#DCFCE7" StrokeShape="RoundRectangle 18" Padding="20">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="156" FontSize="40" FontAttributes="Bold" TextColor="#166534"/>
                        <Label Text="Citas Hoy" FontSize="14" TextColor="#14532D"/>
                    </VerticalStackLayout>
                </Border>
            </HorizontalStackLayout>

            <!-- MENÚS CON TAP CORRECTO (SIN Tapped) -->
            <Border BackgroundColor="#FECACA" StrokeShape="RoundRectangle 20" Padding="22">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="IrUsuarios_Clicked"/>
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Label Text="U" FontSize="40" TextColor="#991B1B"/>
                    <Label Grid.Column="1" Text="Gestionar Usuarios" FontSize="20" FontAttributes="Bold" 
                           TextColor="#7F1D1D" VerticalOptions="Center" Margin="20,0"/>
                    <Label Grid.Column="2" Text=">" FontSize="36" TextColor="#991B1B"/>
                </Grid>
            </Border>

            <Border BackgroundColor="#BFDBFE" StrokeShape="RoundRectangle 20" Padding="22">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="IrMedicos_Clicked"/>
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Label Text="D" FontSize="40" TextColor="#1D4ED8"/>
                    <Label Grid.Column="1" Text="Gestionar Médicos" FontSize="20" FontAttributes="Bold" 
                           TextColor="#1E40AF" VerticalOptions="Center" Margin="20,0"/>
                    <Label Grid.Column="2" Text=">" FontSize="36" TextColor="#1D4ED8"/>
                </Grid>
            </Border>

            <Border BackgroundColor="#BBF7D0" StrokeShape="RoundRectangle 20" Padding="22">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="IrCitas_Clicked"/>
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Label Text="C" FontSize="40" TextColor="#166534"/>
                    <Label Grid.Column="1" Text="Gestionar Citas" FontSize="20" FontAttributes="Bold" 
                           TextColor="#14532D" VerticalOptions="Center" Margin="20,0"/>
                    <Label Grid.Column="2" Text=">" FontSize="36" TextColor="#166534"/>
                </Grid>
            </Border>

            <Border BackgroundColor="#E5E7EB" StrokeShape="RoundRectangle 20" Padding="22">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="IrReportes_Clicked"/>
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Label Text="G" FontSize="40" TextColor="#4B5563"/>
                    <Label Grid.Column="1" Text="Reportes y Estadísticas" FontSize="20" FontAttributes="Bold" 
                           TextColor="#374151" VerticalOptions="Center" Margin="20,0"/>
                    <Label Grid.Column="2" Text=">" FontSize="36" TextColor="#4B5563"/>
                </Grid>
            </Border>

            <!-- Cerrar Sesión -->
            <Button Text="Cerrar Sesión"
                    BackgroundColor="#DC2626"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="60"
                    FontSize="18"
                    FontAttributes="Bold"
                    Clicked="CerrarSesion_Clicked"/>

            <Label Text="© 2025 Clínica MedicPro • Panel Administrativo"
                   FontSize="12" TextColor="#94A3B8"
                   HorizontalOptions="Center" Margin="0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>